    /* Variables CSS */
    :root {
      --primary-color: #0f0f0f;
      --secondary-color: #1a1a1a;
      --tertiary-color: #252525;
      --accent-color: #ff9900;
      --text-color: #ffffff;
      --font-family: "Poppins", sans-serif;
