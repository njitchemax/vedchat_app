    /* Style général */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    /* Style de la barre de navigation */
    .navbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: var(--primary-color);
      height: 80px;
      padding: 0 50px;
    }

    .navbar-logo {
      width: 150px;
    }

    .navbar-menu {
      display: flex;
      list-style: none;
    }

    .navbar-menu li {
      margin-left: 30px;
    }

    .navbar-menu a {
      color: var(--text-color);
      text-decoration: none;
      font-family: var(--font-family);
      font-weight: bold;
    }

    .navbar-menu a:hover {
      color: var(--accent-color);
    }

    .navbar-button {
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--accent-color);
      color: var(--text-color);
      border-radius: 5px;
      padding: 10px 20px;
      font-family: var(--font-family);
      font-weight: bold;
      cursor: pointer;
    }

    .navbar-button:hover {
      transform: scale(1.1);
    }

